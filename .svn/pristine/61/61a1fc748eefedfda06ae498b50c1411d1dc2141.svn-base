#ifndef PATH_H
#define PATH_H

#include "stdbool.h"
#include "stdio.h"

#define SITE_LENGTH 3
#define SITE_PLAYER_CAPACITY 2
#define SITE_NUM 0
#define PLAYER_ID 1
#define UNOCCUPIED -1

typedef enum {  
    MO = 0,
    V1 = 1,
    V2 = 2,
    DO = 3,
    RI = 4,
    SI = 5,
    BARRIER = 6,
    SITE_ERROR_TYPE
} Site;

typedef struct {
    int numOfSites;
    int playerCount;
    Site* sites;
    char* sitePlayerCapacities;
    int** playerPositions;
} Path;

Path* read_path(char* pathString, int playerCount);

Path* create_path(int numOfSites, int playerCount, Site* sites, 
        char* sitePlayerCapacities);
void free_path(Path* path);

bool update_path(Path* path, int playerID, int siteNum);

void print_path(Path* path, FILE* file);

int get_player_site_num(Path* path, int playerID);
Site get_site(char* site);
char* get_site_string(Site site);
bool site_occupied(Path* path, int siteNum);

#endif