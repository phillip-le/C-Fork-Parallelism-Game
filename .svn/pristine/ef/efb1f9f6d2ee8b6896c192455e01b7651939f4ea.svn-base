#ifndef PATH_H
#define PATH_H

#include "stdbool.h"
#include "stdio.h"

#define SITE_LENGTH 3
#define UNOCCUPIED -1

typedef enum {  
    MO = 0,
    V1 = 1,
    V2 = 2,
    DO = 3,
    RI = 4,
    SI = 5,
    BARRIER = 6,
    SITE_ERROR_TYPE
} Site;

typedef struct {
    int numOfSites;
    Site* sites;
    char* sitePlayerCapacities;
} Path;

Path* read_path(char* pathString, int playerCount);

Path* create_path(int numOfSites, Site* sites, char* sitePlayerCapacities);
void free_path(Path* path);

Site get_site(char* site);
char* get_site_string(Site site);

int get_next_barrier(Path* path, int currentSite);

#endif