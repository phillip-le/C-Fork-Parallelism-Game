OPTS:=-std=gnu99 -Wall -pedantic -Werror -Wextra -g

2310dealer: path.o test.o deck.o utility.o player.o errors.o
	gcc $(OPTS) -o 2310dealer path.o test.o deck.o utility.o player.o errors.o

test.o: test.c path.h
	gcc $(OPTS) -c test.c

path.o: path.c path.h
	gcc $(OPTS) -c path.c

deck.o: deck.c deck.h
	gcc $(OPTS) -c deck.c

utility.o: utility.c utility.h
	gcc $(OPTS) -c utility.c

player.o: player.c player.h errors.h
	gcc $(OPTS) -c player.c

errors.o: errors.c errors.h
	gcc $(OPTS) -c errors.c

clean:	
	rm *.o 2310dealer